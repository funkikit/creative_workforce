# GCP deployment configuration

ENV_TARGET=gcp

# Cloud SQL example DSN (update instance/credentials accordingly)
DATABASE_URL=postgresql+psycopg://APP_USER:APP_PASSWORD@/creative?host=/cloudsql/YOUR_PROJECT:REGION:INSTANCE

# Storage (GCS bucket + base path for artifact blobs)
GCP_PROJECT=
GCP_LOCATION=asia-northeast1
GCS_BUCKET=
GCS_BASE_PATH=artifacts

# Cloud Tasks queue that triggers the keyframe worker endpoint
CLOUD_TASKS_PROJECT=
CLOUD_TASKS_LOCATION=asia-northeast1
CLOUD_TASKS_QUEUE_ID=creative-workforce-queue
CLOUD_TASKS_TARGET_URL=https://<your-backend-service>/api/tasks/generate-keyframe
CLOUD_TASKS_SERVICE_ACCOUNT_EMAIL=

# Vertex AI vector search / embeddings (falls back to substring when unset)
VERTEX_PROJECT=
VERTEX_LOCATION=asia-northeast1
VERTEX_EMBEDDING_MODEL=textembedding-gecko@003

# AI providers (switch to real services)
LLM_PROVIDER=openai
LLM_MODEL=gpt-4.1-mini
IMAGE_PROVIDER=gemini
IMAGE_MODEL=gemini-2.0-flash-exp

OPENAI_API_KEY=
GEMINI_API_KEY=

# Frontend (Cloud Run/Load Balancer URL for the backend API)
NEXT_PUBLIC_API_BASE_URL=https://<your-backend-service>/api
