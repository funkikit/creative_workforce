# Shared defaults for Creative Workforce services

# Runtime target: local or gcp
ENV_TARGET=local

# Persistence (default SQLite for PoC)
DATABASE_URL=sqlite:///./data/poc.db
LOCAL_STORAGE_ROOT=data/artifacts

# AI providers (local stubs by default)
LLM_PROVIDER=local
LLM_MODEL=gpt-4o-mini
LLM_OUTPUT_STYLE=クリエイティブ・ブリーフ
IMAGE_PROVIDER=placeholder
IMAGE_MODEL=imagen-3.0-generate

# Optional API keys (leave empty when using local stubs)
OPENAI_API_KEY=
GEMINI_API_KEY=

# Logging / debugging
SQLALCHEMY_ECHO=false

# CORS (comma-separated list for multi origins)
CORS_ALLOW_ORIGINS=http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
