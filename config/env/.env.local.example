# Local developer overrides

ENV_TARGET=local

# Backend persistence (SQLite default). For Docker Compose Postgres, replace with:
# DATABASE_URL=postgresql+psycopg://creative:creative@postgres:5432/creative
DATABASE_URL=sqlite:///./data/poc.db
LOCAL_STORAGE_ROOT=data/artifacts

# Use lightweight stubs unless you have real API keys
LLM_PROVIDER=local
IMAGE_PROVIDER=placeholder

# Optional: wire to actual APIs
OPENAI_API_KEY=
GEMINI_API_KEY=

# Frontend configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api
